{
  "manifest_version": 2,
  "name": "Extension",
  "description": "Find vulnerabilities in sites you're using!",
  "version": "1.0",
  "icons": {
    "16": "img/penguin.png",
    "48": "img/penguin.png",
    "128": "img/penguin.png"
  },
  "devtools_page": "devtools.html",
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
   "web_accessible_resources": [
     "request_logger.html",
     "js/attacks/xss.json",
     "js/attacks/xss.js"
   ],
  "content_scripts": [
    {
      "matches": ["*://*/*"],
       "css": [
         "css/main.css",
         "css/action_replay.css"
       ],
      "js": [
        "lib/jquery/jquery-3.3.1.min.js",
        "lib/jquery_form/jquery.form.js",
        "js/attacks/xss.js",
        "js/attack.js",
        "js/action_replay.js",
        "js/passive_mode.js"
      ],
      "run_at": "document_start"
    }
  ],
  "permissions": [
          "webRequestBlocking",
          "webRequest",
          "cookies",
          "storage",
          "tabs",
          "*://*/*"
  ],
  "browser_action": {
    "default_icon": "img/penguin.png",
    "default_popup": "popup.html",
    "default_title": "Extension"
  },
  "update_url": "http://0.0.0.0"
}
